<% include ./partials/header %> 

<div class ="ui main text container segment"> 
<h1> New Food Post </h1>

<form action ="/blogs" method ="POST" class ="ui form"> 
    <div class="focus field">
        <label> Restaurant Name </label>
    <input type ="text" placeholder ="Restaurant name:" name ="blog[title]"> 
    </div>
    <div class="focus field">
        <label> Dish Name </label>
    <input type ="text" placeholder ="Dish name:" name ="blog[body]"> 
    </div>
    <div class="focus field">
    <label> Location </label>
    <input type ="text" placeholder ="Location:" name ="blog[location]" class ="ui input focus">
    </div>
    <div class="focus field">
        <label> Image URL </label>
    <input type ="text" placeholder ="Image URL:" name ="blog[image]" class ="ui input focus">
    </div>
    <div class="focus field">
        <label> Description </label>
        <textarea name ="blog[desc]" required> </textarea>
    </div>
    <button class ="ui basic violet button"> Submit!</button>
</form>
</div>
<% include ./partials/footer %>